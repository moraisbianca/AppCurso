<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoCurso.App">

    <Application.Resources>

        <ResourceDictionary>

            <Style TargetType="Label" x:Key="FonteGeralPersonalizada">
                <Setter Property="FontFamily">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:String"
                                Android="century-gothic-bold.ttf#century-gothic-bold" />
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="BotaoVerm" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#AB0209" />
                <Setter Property="TextColor" Value="#FFF" />
                <Setter Property="CornerRadius" Value="5" />
            </Style>

            <Style x:Key="BotaoCinza" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#3E474C" />
                <Setter Property="TextColor" Value="#FFF" />
                <Setter Property="CornerRadius" Value="5" />
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>