<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoCurso.View.SegundoAno"
             BackgroundColor="#FFF"
             Title="Disciplinas do Segundo Ano">

    <ContentPage.Content>

        <ScrollView>

            <Frame>
                <StackLayout VerticalOptions="CenterAndExpand" Padding="10">

                    <Button Text="Programação Web II" Clicked="ProWeb" Style="{StaticResource BotaoVerm}"/>
                    <Button Text="Banco de Dados II" Clicked="BancoDados" Style="{StaticResource BotaoVerm}"/>
                    <Button Text="Desenvolvimento de Sistemas" Clicked="DesSist" Style="{StaticResource BotaoVerm}"/>
                    <Button Text="Programação Mobile I" Clicked="ProMob" Style="{StaticResource BotaoVerm}"/>
                    <Button Text="Sistemas Embarcados" Clicked="SistEmb" Style="{StaticResource BotaoVerm}"/>


                </StackLayout>
            </Frame>

        </ScrollView>

    </ContentPage.Content>
</ContentPage>