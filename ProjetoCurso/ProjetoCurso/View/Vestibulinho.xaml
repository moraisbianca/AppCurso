<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoCurso.View.Vestibulinho"
             Title="Vestibulinho">

    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <ScrollView>

                <StackLayout VerticalOptions="Start" Padding="10">

                    <Button Text="Inscreva-se pelo site: www.vestibulinhoetec.com.br"
                    Style="{StaticResource BotaoVerm}" Clicked="Button_Clicked"
                    Margin="10"/>

                    <Image x:Name="vestibulinho2" Scale="1" Margin="0,10,0,60"/>
                    <Image x:Name="calendario" Scale="1.42" Margin="0,0,0,30"/>

                    <Label Text="2° ano DS 2022"
                       Margin="30"
                       FontSize="15" HorizontalTextAlignment="Center"
                       Style="{ StaticResource FonteGeralPersonalizada}" />

                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>