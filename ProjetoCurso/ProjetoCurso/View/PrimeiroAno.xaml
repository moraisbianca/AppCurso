<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoCurso.View.PrimeiroAno"
             BackgroundColor="#FFF"
             Title="Disciplinas do Primeiro Ano">
    
    
    <ContentPage.Content>

        <ScrollView>

            <StackLayout VerticalOptions="CenterAndExpand" Padding="10">

                <Button Text="Fundamentos da Informática" Clicked="Fundamentos" Style="{StaticResource BotaoCinza}"/>
                <Button Text="Programação de Algoritmos" Clicked="ProAlg" Style="{StaticResource BotaoCinza}"/>
                <Button Text="Programação Web I" Clicked="ProWeb" Style="{StaticResource BotaoCinza}"/>
                <Button Text="Banco de Dados I" Clicked="BancoDados" Style="{StaticResource BotaoCinza}"/>
                <Button Text="Análise e Desenvolvimento de Sistemas" Clicked="Analise" Style="{StaticResource BotaoCinza}"/>
                <Button Text="Design Digital" Clicked="Design" Style="{StaticResource BotaoCinza}"/>
                

            </StackLayout>
            
        </ScrollView>
            
        
    </ContentPage.Content>
</ContentPage>