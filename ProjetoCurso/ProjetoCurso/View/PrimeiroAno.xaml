<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoCurso.View.PrimeiroAno"
             BackgroundColor="black"
             Title="Disciplinas do Primeiro Ano">


    <ContentPage.Content>

        <ScrollView>

            <Frame>
                <StackLayout VerticalOptions="CenterAndExpand" Padding="10">

                    <Button Text="Fundamentos da Informática" Clicked="Fundamentos" Style="{StaticResource BotaoVerm}"/>
                    <Button Text="Programação de Algoritmos" Clicked="ProAlg" Style="{StaticResource BotaoVerm}"/>
                    <Button Text="Programação Web I" Clicked="ProWeb" Style="{StaticResource BotaoVerm}"/>
                    <Button Text="Banco de Dados I" Clicked="BancoDados" Style="{StaticResource BotaoVerm}"/>
                    <Button Text="Análise e Desenvolvimento de Sistemas" Clicked="Analise" Style="{StaticResource BotaoVerm}"/>
                    <Button Text="Design Digital" Clicked="Design" Style="{StaticResource BotaoVerm}"/>


                </StackLayout>
            </Frame>
        </ScrollView>


    </ContentPage.Content>
</ContentPage>