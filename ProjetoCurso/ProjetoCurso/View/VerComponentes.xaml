<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoCurso.View.VerComponentes"
             BackgroundColor="#eee"
             Title="Componentes">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <ScrollView>

                <StackLayout Padding="20">

                    <Label Text="{Binding Nome}" HorizontalTextAlignment="Center" FontAttributes="Bold"
                           Margin="0,0,0,30" TextColor="#AB0209" FontSize="Title" />

                    <Label Text="Atribuições e Responsabilidades" HorizontalOptions="Center"
                           TextColor="#eee" BackgroundColor="#3E474C" FontSize="Large" />

                    <Label Text="{Binding Atribuicoes}" Margin="0,0,0,30" FontSize="Medium" HorizontalTextAlignment="Center"/>

                    <Label Text="Valores e Atitudes" HorizontalTextAlignment="Center" BackgroundColor="#3E474C" TextColor="#eee" FontSize="Large" />

                    <Label Text="{Binding ValoresAtitudes}" FontSize="Medium" HorizontalTextAlignment="Center" />

                </StackLayout>

            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>